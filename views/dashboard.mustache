<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Dashboard</title>
    <style>
        /* Base Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f6f8; /* Light background */
            color: #333;
        }

        header {
            background: linear-gradient(90deg, #001f3f, #004080); /* Gradient for header */
            color: white;
            padding: 20px 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-size: 30px;
            font-weight: 700;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .header-content {
            text-align: center;
        }

        .header-right {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .date-time {
            font-size: 16px;
            color: #f1f1f1;
        }

        .logout-button {
            background-color: #f44336;
            color: white;
            padding: 8px 18px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .logout-button:hover {
            background-color: #d32f2f;
            transform: scale(1.05); /* Slightly bigger on hover */
        }

        .container {
            padding: 50px 40px;
            max-width: 1200px;
            margin: auto;
            text-align: center;
            background: white;
            border-radius: 12px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1); /* Soft container shadow */
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }

        .card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Softer, deeper shadow */
            padding: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
        }

        .card:hover {
            transform: translateY(-8px); /* Slightly more lift */
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2); /* Deeper shadow on hover */
            background: linear-gradient(90deg, #003366, #00509e); /* Gradient on hover */
        }

        .card-header {
            padding: 15px;
            background: #001f3f; /* Dark blue */
            color: white;
            font-size: 22px;
            font-weight: bold;
            text-align: center;
            border-radius: 8px;
        }

        .card-body {
            padding: 20px;
            font-size: 16px;
            color: #555;
            text-align: center;
            transition: color 0.3s ease; /* Transition for text color */
        }

        .card-footer {
            padding: 12px;
            background: #f5f5f5;
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            opacity: 0;
            transition: opacity 0.3s ease;
            border-radius: 8px;
        }

        .card:hover .card-footer {
            opacity: 1; /* Show footer text on hover */
        }

        /* Change color of card-body text to white on hover */
        .card:hover .card-body {
            color: white;
        }

        @media (max-width: 768px) {
            .card-header {
                font-size: 18px;
            }

            .card-body {
                font-size: 14px;
            }

            .card-footer {
                font-size: 12px;
            }
        }
    </style>
    <script>
        // Function to update date and time dynamically
        function updateDateTime() {
            const dateTimeElement = document.querySelector('.date-time');
            const now = new Date();
            const formattedDate = now.toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
            });
            const formattedTime = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
            dateTimeElement.textContent = `${formattedDate}, ${formattedTime}`;
        }

        setInterval(updateDateTime, 1000); // Update every second
    </script>
</head>
<body onload="updateDateTime()">
    <header>
        <div class="header-content">
            <div>Patient Dashboard</div>
        </div>
        <div class="header-right">
            <div class="date-time"></div>
            <form action="/logout" method="POST" style="margin: 0;">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
    </header>
    <div class="container">
        <!-- Card Grid -->
        <div class="card-grid">
            <a href="/appointments" class="card">
                <div class="card-header">My Appointments</div>
                <div class="card-body">View, schedule, or cancel your appointments.</div>
                <div class="card-footer">Manage Appointments</div>
            </a>
            <a href="/medical-history" class="card">
                <div class="card-header">Medical History</div>
                <div class="card-body">Review your past medical visits and diagnoses.</div>
                <div class="card-footer">View Medical History</div>
            </a>
            <a href="/prescriptions" class="card">
                <div class="card-header">Prescriptions</div>
                <div class="card-body">Access and view your prescribed medications.</div>
                <div class="card-footer">Manage Prescriptions</div>
            </a>
            <a href="/notifications" class="card">
                <div class="card-header">Notifications</div>
                <div class="card-body">Stay updated with messages and reminders.</div>
                <div class="card-footer">View Notifications</div>
            </a>
            <a href="/profile" class="card">
                <div class="card-header">My Profile</div>
                <div class="card-body">Update your personal information and contact details.</div>
                <div class="card-footer">Manage Profile</div>
            </a>
            <a href="/queue" class="card">
                <div class="card-header">Patient Queue</div>
                <div class="card-body">Check and manage your position in the queue.</div>
                <div class="card-footer">View Queue</div>
            </a>
        </div>
    </div>
</body>
</html>
