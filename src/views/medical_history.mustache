<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical History</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8; /* Original light background */
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #001f3f; /* Dark blue restored */
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            position: relative;
        }

        .back-button {
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
            text-decoration: none;
            background-color: #ddd;
            color: #001f3f;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: bold;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #bbb;
        }

        .container {
            max-width: 1100px;
            margin: 30px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #001f3f;
            margin-bottom: 20px;
            font-size: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #001f3f; /* Dark blue header */
            color: white;
            font-size: 16px;
        }

        td {
            font-size: 14px;
            color: #333;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f0f0f0;
        }

        /* Chart container styling */
        .chart-container {
            width: 100%;
            height: 400px; /* Adjusted for better visualization */
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <header>
        Medical History
        <a href="/dashboard" class="back-button">Back to Dashboard</a>
    </header>
    <div class="container">
        <h2>Your Medical History</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Condition</th>
                    <th>Treatment</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data (Static for now) -->
                <tr>
                    <td>1</td>
                    <td>2024-01-15</td>
                    <td>Flu</td>
                    <td>Rest and hydration</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>2024-03-22</td>
                    <td>Headache</td>
                    <td>Pain relievers</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>2024-05-10</td>
                    <td>Back pain</td>
                    <td>Physical therapy</td>
                </tr>
                <!-- End Sample Data -->
            </tbody>
        </table>

        <!-- Medical Condition Chart -->
        <div class="chart-container">
            <canvas id="conditionChart"></canvas>
        </div>
    </div>

    <script>
        // Prepare data for the chart
        const ctx = document.getElementById('conditionChart').getContext('2d');
        const conditionChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Flu", "Headache", "Back pain"],  // Conditions from medical history
                datasets: [{
                    label: 'Number of Occurrences',
                    data: [5, 3, 2],  // Sample counts (replace with real data)
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.5)', // Blue
                        'rgba(255, 99, 132, 0.5)', // Red
                        'rgba(255, 159, 64, 0.5)'  // Orange
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
</body>
</html>
